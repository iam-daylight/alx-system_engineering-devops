#!/usr/bin/env bash

# Check if the script is running in Docker
if [ -f "/.dockerenv" ]; then
    # Configure localhost to resolve to 127.0.0.2
    echo "127.0.0.2 localhost" >> /etc/hosts

    # Configure facebook.com to resolve to 8.8.8.8
    echo "8.8.8.8 facebook.com" >> /etc/hosts

    echo "Hosts file configured successfully."
else
    echo "This script is intended to run inside Docker. Please run it within a Docker container."
    exit 1
fi
